# AI Workstation Environment Configuration
# Copy this file to .env and fill in your values

# Timezone
TZ=America/New_York

# Open-WebUI Configuration
WEBUI_SECRET_KEY=change-this-to-a-random-secret-key
ENABLE_RAG_WEB_SEARCH=true
RAG_WEB_SEARCH_ENGINE=searxng

# Model Storage Paths
MODELS_PATH=/mnt/models

# GPU Configuration
NVIDIA_VISIBLE_DEVICES=all
CUDA_VISIBLE_DEVICES=0

# Ollama Configuration
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_ORIGINS=*

# ComfyUI Configuration
COMFYUI_PORT=8188
COMFYUI_VRAM_MANAGEMENT=auto

# Text-Generation-WebUI Configuration
TEXTGEN_PORT=7860
TEXTGEN_API_PORT=5000

# Whisper Configuration
WHISPER_MODEL=base.en  # tiny, base, small, medium, large
WHISPER_LANGUAGE=en

# Piper Configuration
PIPER_VOICE=en_US-lessac-medium
PIPER_PORT=10200

# Home Assistant Configuration
HA_BASE_URL=http://localhost:8123
HA_TOKEN=your-long-lived-access-token-here

# Network Configuration
LOCAL_NETWORK=192.168.1.0/24

# Backup Configuration
BACKUP_PATH=/mnt/nas/backups/ai-workstation
BACKUP_RETENTION_DAYS=7

# Resource Limits (uncomment to enable)
# OLLAMA_MAX_LOADED_MODELS=2
# COMFYUI_MAX_QUEUE_SIZE=10
